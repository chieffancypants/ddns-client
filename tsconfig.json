{
  "compilerOptions": {
    "target": "esnext",
    "allowJs": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "outDir": "./dist"
  },
  "include": [
    "**/*.ts",
    "**/*.tsx", "index.ts",
  ],
  "exclude": [
    "node_modules"
  ]
}
